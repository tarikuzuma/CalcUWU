<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Results will be shown here.-->
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:text="19"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp" />

    <!--Box to put the equation-->
    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="2dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:text="9+10"
        android:textSize="32dp"></TextView>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:background="#1D3B88"
       android:paddingVertical="16dp"
       android:id="@+id/buttons_layout">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">

           <!--Button for Clear-->
           <com.google.android.material.button.MaterialButton
           android:layout_width="72dp"
           android:layout_height="72dp"
           app:cornerRadius="5dp"
           android:backgroundTint="@android:color/holo_red_light"
               android:text="C"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_clear"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Open Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="#4A5D8E"
               android:text="("
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_open_bracket"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Close Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="#4A5D8E"
               android:text=")"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_close_bracket"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Division-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_orange_light"
               android:text="/"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_divide"
               >

           </com.google.android.material.button.MaterialButton>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">

           <!--Button for 7-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="7"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_7"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for 8-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="8"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_8"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Close Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="9"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_9"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Division-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_orange_light"
               android:text="x"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_multiply"
               >

           </com.google.android.material.button.MaterialButton>



       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">

           <!--Button for 4-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="4"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_4"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for 5-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="5"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_5"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for 6-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="6dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="6"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_6"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Addition-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_orange_light"
               android:text="+"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_addition"
               >

           </com.google.android.material.button.MaterialButton>



       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">

           <!--Button for Clear-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="1"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_1"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Open Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="2"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_2"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Close Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="3"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_3"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Division-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_orange_light"
               android:text="-"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_subtract"
               >

           </com.google.android.material.button.MaterialButton>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">

           <!--Button for Clear-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="0"
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_0"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Open Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="."
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_dot"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Close Bracket-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="6dp"
               android:backgroundTint="@android:color/holo_green_light"
               android:text="- / +"
               android:textSize="21sp"
               android:layout_margin="12dp"
               android:id="@+id/button_negative"
               >

           </com.google.android.material.button.MaterialButton>

           <!--Button for Division-->
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="5dp"
               android:backgroundTint="@android:color/holo_orange_light"
               android:text="="
               android:textSize="32sp"
               android:layout_margin="12dp"
               android:id="@+id/button_equals"
               >

           </com.google.android.material.button.MaterialButton>



       </LinearLayout>

   </LinearLayout>

</RelativeLayout>
